@require 'constants'

ingredient-height = list-item-height
horizontal-padding = 12px

.swipable-padding-wrapper
  display inline-block
  box-sizing border-box
  height 100%
  width 94%
  position relative
  padding 12px 1%

  .swipable-position-wrapper
    position relative
    height 100%
    width 100%

  .default-modal
    padding inherit

    width 100%
    height 100%

.recipe-view
  background-color grey10

  .fixed-header
    height title-bar-height

  .fixed-content-pane
    padding 0 8px

.recipe-view .recipe-instructions
  padding-left 32px
  padding-right horizontal-padding
  margin 0

  .text-line:not(:last-child)
    margin-bottom 6px

.recipe-view .recipe-notes
  padding 0 horizontal-padding

.recipe-view
  .recipe-instructions, .recipe-notes
    margin-top 12px
