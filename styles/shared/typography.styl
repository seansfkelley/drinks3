$base-font-family = 'Source Sans Pro', sans-serif
$base-font-size   = 16px

@font-face
  font-family: 'Source Sans Pro'
  font-style: normal
  font-weight: 400
  src local('Source Sans Pro'), local('SourceSansPro-Regular'), url('/assets/fonts/SourceSansPro-Regular.ttf')

@font-face
  font-family: 'Source Sans Pro'
  font-style: normal
  font-weight: 600
  src local('Source Sans Pro Semibold'), local('SourceSansPro-Semibold'), url('/assets/fonts/SourceSansPro-Semibold.ttf')

@font-face
  font-family: 'Source Sans Pro'
  font-style: normal
  font-weight: 700
  src local('Source Sans Pro Bold'), local('SourceSansPro-Bold'), url('/assets/fonts/SourceSansPro-Bold.ttf')
