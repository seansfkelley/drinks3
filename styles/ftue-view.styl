@require 'constants'
@require 'mixins'

list-border = 1px solid darken(grey10, 5%)

default-padding = 8px 16px

#ftue-root
  full-screen()
  fade()

  background-color grey10

.ftue-page
  .fixed-header
    border-bottom list-border

  .fixed-footer
    border-top list-border

.ftue-page.web-clip-page
  .fixed-content-pane
    box-sizing border-box
    padding default-padding

  img
    height 1em

.ftue-page
  &.sample-ingredient-page, &.ingredients-page
    i.fa.fa-check-circle
      float right
      line-height list-item-height
      padding-right 12px
      color grey2

.ftue-page.explanation-page
  .fixed-content-pane
    box-sizing border-box
    padding default-padding

  .mixability-toggle .option:not(.selected)
    background-color grey3

.ftue-page.ingredients-page
  .sub-header
    box-sizing border-box
    padding default-padding
