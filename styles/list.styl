@require 'constants'

.list
  .list-item
    line-height list-item-height

    padding-left 12px

    background-color grey0

    &:not(:first-child)
      border-top 1px solid darken(grey0, 5%)

  .empty-list-text
    text-align center
    line-height list-item-height

.list.headered-list
  .list-header
    font-size uppercase-font-size
    background-color grey1
    color grey7
    text-transform uppercase
    padding-left 8px

.list.headered-list.collapsible-list
  .list-group
    overflow hidden

    &.collapsed
      height 0
