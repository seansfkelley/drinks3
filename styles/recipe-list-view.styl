@require 'constants'

.recipe-list-view
  .missing-ingredient
    font-size 0.9em
    line-height 1.2em
    padding-left 12px
    color theme-red

    .unit
      font-size 0.75em
      text-transform uppercase
      font-weight 600

.recipe-list-view .recipe-list-item
  &.incomplete
    padding-bottom 12px

  &:not(.is-mixable)
    color grey6
    font-style italic

  .mixability
    display inline-block
    position relative
    top -2px
    margin-left 8px
    padding 1px

    font-size 0.7em
    font-style normal

    line-height 1em
    min-width 1em
    text-align center

    border 1px solid grey6
    border-radius standard-border-radius
