@require 'constants'

.title-bar.recipe-list-header, .base-liquor-container
  background-color grey3

.title-bar.recipe-list-header
  font-size inherit

  i.fa
    color grey10

.base-liquor-container
  height title-bar-height
  width 100%
  font-size title-font-size

  .base-liquor-option
    width 25%
    text-transform uppercase
    font-size uppercase-font-size
    font-weight 600
    text-align center

    height 100%
    line-height title-bar-height

    &.selected
      color grey10

    &:not(.selected)
      color grey6

  // For the arrow.
  position relative

  // Arrow.
  &:after
    bottom 0
    left 50%
    border solid transparent
    content ' '
    height 0
    width 0
    position absolute
    pointer-events none
    border-color rgba(255, 255, 255, 0)
    border-bottom-color grey10
    border-width 8px
    margin-left -8px
