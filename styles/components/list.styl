.list
  line-height: 44px

  .list-group
    overflow: hidden

    &.collapsed
      height: 0

  .list-item
    .fa-check-circle
      display: none
      float: right

    &.is-selected
      .fa-check-circle
        display: inline-block

  .empty-list-text
    text-align: center

  &.headered-list:not(.show-headers)
    .list-header
      display: none
