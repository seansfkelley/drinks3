@require '../shared/animation'

$error-color = #ed4a4a

.error-message-overlay
  opacity: 0
  transition: opacity $transition-duration-quick-ish
  margin: 16px
  background-color: #fff
  border-radius: 2px
  border: 1px solid $error-color
  box-shadow 0 1px 2px 2px rgba(0, 0, 0, 0.25)
  pointer-events: none

  &.visible
    opacity: 1
    pointer-events: auto

  .error-message
    display: flex
    padding: 10px
    align-items: center
    font-size: 16px

    i.fa
      margin-right: 10px
      font-size: 24px
      color: $error-color
