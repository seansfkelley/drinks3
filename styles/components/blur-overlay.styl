@require '../shared/mixins'

.blur-overlay
  position: relative

  .backdrop, .child-container
    abs-full-screen()

  .backdrop
    opacity: 0
    transition: opacity 500ms
    pointer-events: none

  &.is-dark
    background-color: black

  .child-container
    &.foreground
      opacity: 0
      transition: opacity 500ms
      pointer-events: none

    &.background
      transition: filter 500ms

  &.with-foreground
    .backdrop
      opacity: 0.3

    .child-container
      &.foreground
        opacity: 1
        pointer-events: initial

      &.background
        filter: blur(10px)
        z-index: -1
