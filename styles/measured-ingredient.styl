@require 'constants'

ingredient-height = list-item-height

.measured-ingredient
  font-weight 600
  min-height ingredient-height
  line-height (ingredient-height - 2px) // inline-block extra pixels bullshit
  padding 0 12px

  &:nth-child(odd)
    background-color grey8

  &:nth-child(even)
    background-color grey7

  white-space nowrap

  > *
    display inline-block

  .measure
    min-width 25%
    box-sizing border-box
    padding-right 6px

    .unit
      font-size 0.75em
      text-transform uppercase

  .ingredient
    width 75%

  &.missing .measure, &.missing .ingredient, &.substituted .ingredient
    font-style italic
    color grey5

  &.substituted
    .substitute-label, .substitute-content
      font-size 0.8em
      line-height (ingredient-height * 0.6)

    .substitute-label
      color grey5
      vertical-align top
      margin-left 25%
      margin-right 6px

    .substitute-content
      margin-bottom 8px

      :not(:first-child)
        display block
