@require 'constants'

.search-bar
  height 100%
  width 100%

  position relative

  input
    font-size body-font-size
    height 100%
    width 100%
    outline none

    border none
    box-shadow none

    background-color transparent

    padding-left 32px

    &::-webkit-input-placeholder
      font-size body-font-size


  .fa
    font-size icon-font-size-small
    text-align center

    position absolute

    padding 0
    // These are some magic constants I can't get rid of cause line-height is relative to font-size
    // but we would like to make it 100% of the container height. Oh well.
    width 32px
    height 32px
    line-height 32px

  .fa.fa-times-circle
    right 0

  .fa.fa-search
    left 0

.search-bar.list-topper
  box-sizing border-box
  height list-item-height
  padding 6px 6px

  i.fa
    padding-right 6px
