.landing
  flex: 1
  display: flex
  flex-direction: column

  .title-bar, .search-bar
    flex-shrink: 0

  .search-bar
    z-index: 2 // Above the blur-overlay.

  .random-cocktail
    flex: 1
    display: flex
    flex-direction: column

    .random-cocktail-header
      text-transform: uppercase
      margin: 10px
      padding: 0 10px 10px
      font-weight: 600
      color: #aaa
      border-bottom: 1px solid #ddd

  .blur-overlay
    flex: 1

    .child-container
      display: flex

    .grouped-ingredient-list
      flex: 1
      overflow-y: auto

      .empty-list-text
        font-weight: 600
        color: white

