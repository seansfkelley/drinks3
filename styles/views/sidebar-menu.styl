

.sidebar-menu
  background-color: #393939
  color: #fff
  height: 100%

  .ingredients-button, .mixability-title, .mixability-options .option
    height: 44px
    line-height: 44px

  .ingredients-button, .mixability-title
    padding-left: 8px

  .ingredients-button
    border-bottom: 1px solid lighten(#393939, 10%)

    svg
      vertical-align: middle
      margin-top: -9px

      path
        fill: #999

    .item-text
      margin-left: 8px

  .mixability-title
    text-transform: uppercase
    font-size: 0.9em
    color: #999
    font-weight: 600

  .mixability-options-container
    position: relative

    .input-wrapper
      // Due to the weird sizing that happens when you rotate, force the expected size here.
      // height: 3 * 44px
      // width: 44px
      position: absolute
      left: 0

    input[type=range]
      // http://stackoverflow.com/questions/24369879/styling-a-vertical-html5-range-input
      // This also causes almost all the other styling rules to be flipped width-for-height.
      transform: rotate(90deg)
      transform-origin: 0 100%
      -webkit-appearance: none

      width: 3 * 44px
      height: 44px
      margin-top: -44px

      &::-webkit-slider-runnable-track
        height: 12px
        margin: 16px 0
        background-color: darken(#393939, 20%)

      &::-webkit-slider-thumb
        -webkit-appearance: none
        width: 40px
        height: 24px
        margin-top: -6px
        margin-left: 1px
        background-color: #888
        border-radius: 3px

    .mixability-options
      width: 100%

      .option
        padding-left: 44px

        &.is-selected
          background-color: #555

