.recipe-id-workflow .id-entry
  padding: 0 20px
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

  .instruction
    font-size: 20px

  input
    font-size: 16px
    width: 90%
    line-height: 44px
    border-bottom: 1px solid #ddd
    font-family: monospace

  .invalid-message
    margin-top: 8px
    color: #d44

    visibility: hidden
    &.visible
      visibility: visible
