@require 'constants'
@require 'mixins'

.swipable-padding-wrapper
  display inline-block
  box-sizing border-box
  height 100%
  width 92%
  position relative
  padding 24px 2%

  .swipable-position-wrapper
    position relative
    height 100%
    width 100%

  .default-modal
    padding inherit

    width 100%
    height 100%


.recipe-list-view
  .missing-ingredient
    font-size 0.9em
    line-height 1.2em
    padding-left 12px
    color theme-red

    .unit
      font-size 0.75em
      text-transform uppercase
      font-weight 600

.recipe-list-view .recipe-list-item
  &.incomplete
    padding-bottom 12px

  &:not(.is-mixable)
    color grey6
    font-style italic

  .mixability
    display inline-block
    position relative
    top -2px
    margin-left 8px
    padding 1px

    font-size 0.7em
    font-style normal

    line-height 1em
    min-width 1em
    text-align center

    border 1px solid grey6
    border-radius standard-border-radius

// Okay this is not great, but it's probably marginally better than copy-pasting.
.recipe-view, .editable-recipe-view
  .fixed-header
    background-color grey8
    color grey0

    border-top-left-radius inherit
    border-top-right-radius inherit

  .fixed-footer
    border-bottom-left-radius inherit
    border-bottom-right-radius inherit

.recipe-view
  .recipe-description > :nth-child(odd)
    background-color grey1

  .fixed-content-pane
    background-color grey0

  .recipe-description
    // Make iPhone overscroll look less dumb.
    > :first-child
      border-top 1px solid grey2
    // Ideally we could fill any remaining space with the last block's background color, but this will do.
    > :not(:last-child), > :last-child:nth-child(odd)
      border-bottom 1px solid grey2

    .recipe-ingredients, .recipe-instructions, .recipe-notes
      padding 0 20px 20px

    .recipe-section-header
      font-size uppercase-font-size
      text-transform uppercase
      text-align center

      padding 16px 0 16px

    .recipe-ingredients .measured-ingredient
      font-weight 600

      > *
        display inline-block

      .measure
        width 30%

        .unit
          font-size 0.75em
          text-transform uppercase

      .ingredient
        width 70%

      .ingredient-subtitle
        position relative
        left 30%
        width 70%

        font-size 0.75em

    .recipe-instructions .text .text-line:not(:last-child)
      margin-bottom 6px

    .recipe-notes
      //
