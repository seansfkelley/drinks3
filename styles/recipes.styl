@require 'constants'
@require 'mixins'

.swipable-wrapper
  display inline-block
  height 100%

.recipe-list-view
  .search-bar input
    border 1px solid grey2

  .fixed-header
    shadow('bottom', 2px)
    z-index 1 // To see the shadow.

  .missing-ingredient
    font-size 0.9em
    line-height 1.2em
    padding-left 12px
    color theme-red

    .unit
      font-size 0.75em
      text-transform uppercase
      font-weight 600

.recipe-list-view .recipe-list-item
  &.incomplete
    padding-bottom 12px

  .delete-button
    overflow hidden
    // Width is set in javascript to keep things in one place.
    position absolute
    top 0

    background-color red
    font-weight 600
    text-align center
    color grey1
    height 100%

    .text
      position relative
      top 50%
      line-height 0


.recipe-view, .editable-recipe-view
  .title-bar, .button-bar
    background-color grey8
    color grey0

  .fixed-header, .title-bar
    border-top-left-radius inherit
    border-top-right-radius inherit

.recipe-view
  .recipe-description > :nth-child(odd)
    background-color grey1

  .fixed-content-pane
    background-color grey0

  .recipe-description
    // Make iPhone overscroll look less dumb.
    > :first-child
      border-top 1px solid grey2
    // Ideally we could fill any remaining space with the last block's background color, but this will do.
    > :not(:last-child), > :last-child:nth-child(odd)
      border-bottom 1px solid grey2

    .recipe-ingredients, .recipe-instructions, .recipe-notes
      padding 0 20px 20px

    .recipe-section-header
      font-size uppercase-font-size
      text-transform uppercase
      text-align center

      padding 16px 0 16px

    .recipe-ingredients .measured-ingredient
      font-weight 600

      > *
        display inline-block

      .measure
        width 30%

        .unit
          font-size 0.75em
          text-transform uppercase

      .ingredient
        width 70%

      .ingredient-subtitle
        position relative
        left 30%
        width 70%

        font-size 0.75em

    .recipe-instructions .text .text-line:not(:last-child)
      margin-bottom 6px

    .recipe-notes
      //

  .fixed-header, .fixed-footer
    border-bottom-left-radius inherit
    border-bottom-right-radius inherit
