@require 'mixins'
@require 'sizes'

header-height = 44px

.search-bar
  height 100%
  width 100%

  input
    font-size 16px
    height 100%
    width 100%
    outline none

  position relative

  i.fa
    font-size 20px
    line-height 0

    position absolute
    right 0

    padding 16px 6px 16px

.recipe-page
  fixed-header-container header-height

.recipe-header
  font-size header-size
  text-align center

  height 100%

  position relative

  .fa, .header-title
    line-height header-height

  .fa.left
    float left
    margin-left 10px

  .fa.right
    float right
    margin-right 10px

  .search-bar-wrapper
    position absolute

    top 6px
    right 36px
    bottom 6px

    overflow hidden

    &.hidden
      width 0
      opacity 0
      transition opacity 0s ease 0.5s, width 0.5s

    &.visible
      width calc(100% - 42px) // 6px + 36px
      opacity 1
      transition opacity 0s, width 0.5s


.recipe-list
  height 100%
  overflow scroll

.recipe-view
  width 100%
  height 100%

  fixed-header-container 30px

  .recipe-title
    font-size 24px

    i.fa
      float right

  .ingredient-section-header, .header
    font-size 20px
    background-color #eee

  .recipe-instructions, .recipe-notes
    margin-top 6px
