html, body
  font-family Lucida Grande

  width 100%
  height 100%
  margin 0
  padding 0

  -webkit-user-select none

sticky-header-container(height)
  height 100%

  .sticky-header-bar
    height height

  .sticky-header-content-pane
    height "calc(100% - %s)" % height
    overflow-y scroll

.tabbed-view
  sticky-header-container 24px

.tab-bar
  display flex
  width 100%

  i.fa
    margin-right 6px

  .tab
    display flexbox
    flex-grow 1
    text-align center
    font-size 20px

.paginated-view
  sticky-header-container 24px

.paginated-bar
  .paginated-title, .paginated-control
    display inline-block

  .paginated-title
    text-align center
    width 34%
    font-size 20px

  .paginated-control
    width 33%
    font-size 16px

    &.left
      text-align left

    &.right
      text-align right

.list-header
  font-size 16px
  margin 2px 5px

  background-color #fafafa

.ingredient-list-item, .recipe-list-item
  font-size 24px
  line-height 44px


.ingredient-list-item
  .ingredient-icon
    margin 0 5px

  .name
    display inline-block

  &.is-selected
    background-color #eee

.recipe-view
  width 100%
  height 100%

  sticky-header-container 24px

  .recipe-title
    font-size 24px

    i.fa
      float right
