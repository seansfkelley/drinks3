@require 'mixins'
@require 'colors'
@require 'sizes'

// TODO: Why the shit is this here?
.sticky-header-container
  position relative

  .sticky-header-wrapper
    position absolute
    top 0
    width 100%
    z-index 1

.ingredients-footer
  box-shadow inset 0px 3px 3px 0px rgba(0,0,0,0.25)
  background-color grey8
  color grey0

  font-size header-footer-font-size
  text-align center

  height 100%

  .fa, .footer-title
    line-height header-footer-size

  .fa
    width 20px
    padding 0 12px 0

  // Visual correction.
  .fa.fa-square-o, .fa.fa-check-square-o
    margin-top 1px

  // Visual correction.
  .fa.fa-check-square-o
    padding-left 14px
    padding-right 10px

  .fa.float-left
    border-right 1px solid grey7

  .fa.float-right
    border-left 1px solid grey7

.ingredient-list-view
  fixed-header-footer-container header-footer-size, 0

  background-color grey7

  .ingredient-header
    color grey0

    .search-bar-wrapper
      color grey7

  .ingredient-list-item
    i.fa
      display none

      float right
      padding-right 6px
      // TODO: This is probably some kind of standard size. What should it be called?
      font-size 20px
      line-height 44px

      color grey7

      text-shadow 0px 0px 2px rgba(0, 0, 0, 0.5)

    &.is-selected i.fa
      display inline-block

    .name
      display inline-block
