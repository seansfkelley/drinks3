@require 'mixins'
@require 'colors'
@require 'sizes'

.ingredients-footer
  box-shadow inset 0px 3px 3px 0px rgba(0, 0, 0, 0.25)
  background-color grey8a
  color grey0

  font-size header-footer-font-size
  font-weight 500
  text-align center

  height header-footer-size

  .fa, .footer-title
    height header-footer-size
    width header-footer-size
    box-sizing border-box
    line-height header-footer-size

  .fa.float-left
    border-right 1px solid grey7

  .fa.float-right
    border-left 1px solid grey7

  // Visual corrections.
  .fa.fa-square-o, .fa.fa-check-square-o
    padding-top 1px
    overflow hidden

  .fa.fa-check-square-o
    padding-left 14px
    padding-right 10px

  .fa.fa-shopping-cart
    padding-left 11px
    padding-right 13px

.ingredient-list-view
  fixed-header-footer-container header-footer-size, 0

  background-color grey8a

  .ingredient-header
    color grey0

    .search-bar-wrapper
      color grey7

  .ingredient-selection-list
    .ingredient-group-header, .ingredient-list-item
      padding-left 12px

    .empty-search-results
      color grey5
      text-align center
      line-height list-item-size

    .ingredient-group-header
      color grey5
      text-transform uppercase
      font-size 14px
      line-height list-item-size
      font-weight 500

      border-top 1px solid lighten(grey8a, 5%)

    .ingredient-section .ingredient-list-item:first-child
      box-shadow inset 0px 2px 2px 0px rgba(0, 0, 0, 0.25)

    // .ingredient-section .ingredient-list-item:last-child
    //   box-shadow inset 0px -2px -2px 0px rgba(0, 0, 0, 0.25)

    .ingredient-list-item
      line-height list-item-size
      background-color grey8
      color grey1

      i.fa
        display none

        float right
        padding-right 12px
        // TODO: This is probably some kind of standard size. What should it be called?
        font-size 20px
        line-height list-item-size

        color grey5

        text-shadow 0px 0px 2px rgba(0, 0, 0, 0.5)

      &.is-selected i.fa
        display inline-block

      .name
        display inline-block

      &:not(:last-child)
        border-bottom 1px solid darken(grey8, 5%)
