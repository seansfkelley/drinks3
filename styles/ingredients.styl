html, body
  font-family Lucida Grande

  width 100%
  height 100%
  margin 0
  padding 0

  -webkit-user-select none

.tab-bar
  display flex
  width 100%

  i.fa
    margin-right 6px

  .tab
    display flexbox
    flex-grow 1
    text-align center
    font-size 24px

.list-header
  font-size 16px
  margin 2px 5px

.ingredient
  font-size 24px
  line-height 44px

  .ingredient-icon
    margin 0 5px

  .name
    display inline-block

  &.is-selected
    background-color #eeeeee
