@require 'colors'

.sticky-header-container
  position relative

  .sticky-header-wrapper
    position absolute
    top 0
    width 100%
    z-index 1

.ingredient-list
  height 100%
  overflow scroll

.ingredient-list-item
  .ingredient-icon
    margin 0 5px

  .name
    display inline-block

  &.is-selected
    background-color theme-color0

    i.fa
      color theme-color2
