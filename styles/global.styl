@require 'colors'

@font-face
  font-family 'Source Sans Pro'
  font-style normal
  font-weight 400
  src local('Source Sans Pro'), local('SourceSansPro-Regular'), url('/fonts/SourceSansPro-Regular.ttf')

html
  font-family Source Sans Pro
  color grey9
  background-color grey0
  overflow hidden

  user-select none

  // TODO: Why don't these work with autoprefixer?
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

html, body
  width 100%
  height 100%
  margin 0
  padding 0

body #iphone-status-bar-spacer
  display none

iphone-status-bar-height = 20px

body[standalone]
  height "calc(100% - %s)" % iphone-status-bar-height

  #iphone-status-bar-spacer
    display block
    height iphone-status-bar-height
    width 100%
    background-color grey7

.float-left
  float left

.float-right
  float right
