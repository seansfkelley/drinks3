@require 'constants'

right-padding = 12px

.list.grouped-ingredient-list.headered-list
  background-color grey1

  .list-header, .list-item
    padding-left 16px

  .list-header
    background-color grey1
    color grey5
    text-transform uppercase
    font-size uppercase-font-size
    line-height list-item-height
    font-weight 600

    border-top 1px solid lighten(grey1, 5%)

    .count
      float right
      // Unfortunately this magic constant has to stay -- normally line-height would take care of
      // vertically centering things, but because we have to reduce the line height to not mess up
      // the background coloration.
      margin-top 14px
      margin-right right-padding
      padding 2px
      line-height 1em
      min-width 1em

      background-color grey2
      border-radius standard-border-radius

      color grey5
      text-align center
      font-weight 700

  .list-group
    transition height 0.33s

    .collapsed
      transition height 0.33s

    .list-item:first-child
      shadow-inset('top', 2px)

  .list-item
    line-height list-item-height
    background-color grey2
    color grey8

    .has-ingredient-icon
      display none

      float right
      padding-right right-padding
      font-size icon-font-size
      line-height inherit

      color grey5

      text-shadow 0px 0px 2px rgba(0, 0, 0, 0.5)

    &.is-selected .has-ingredient-icon
      display inline-block

    .name
      display inline-block

    &:not(:first-child)
      border-top 1px solid darken(grey2, 5%)

  .empty-list-text
    color grey5
    text-align center
    line-height list-item-height
