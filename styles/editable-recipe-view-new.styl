@require 'constants'
@require 'mixins'

ingredient-height = list-item-height
list-padding = 12px

.editable-recipe-page
  background-color grey10

  .fixed-content-pane
    display flex
    justify-content center

.navigation-header
  height title-bar-height

  i.fa
    height title-bar-height
    line-height title-bar-height

  i.fa.fa-times
    width title-bar-height
    text-align center

  i.fa.fa-chevron-left
    padding-right 8px

  .back-button
    display inline-block
    padding 0 8px

.editable-recipe-page i.fa.fa-arrow-right
    font-size title-font-size
    float right

    height title-bar-height
    width title-bar-height

    text-align center
    line-height title-bar-height

.editable-recipe-page .name-page
  width 75%

  input
    width 100%
    padding 10px

    font-size title-font-size

    border 1px solid grey8

    &::-webkit-input-placeholder
      font-size title-font-size

.editable-recipe-page .ingredients-page
  box-sizing border-box
  width 100%
  padding 0 8px

  .ingredients-list .deletable, .editable-ingredient2
    zebra(grey8, grey7)

  .measured-ingredient
    background-color transparent

  .editable-ingredient2
    padding-bottom list-padding

    .input-line
      width 100%
      padding-left list-padding
      display flex
      box-sizing border-box

      input, .done-button
        height ingredient-height
        line-height ingredient-height

      input
        flex 1
        background-color transparent

      .done-button
        width 80px
        text-align center
        text-transform uppercase
        font-size uppercase-font-size
        font-weight 600

        background-color grey6

    .ingredient-list-header
      text-transform uppercase
      font-size 0.7em
      font-weight 600
      padding-left 12px
      padding-bottom 4px

    .ingredient-group-list
      margin 0 list-padding

      max-height 200px
      overflow scroll

      .list-item
        padding-left 16px

        background-color grey2
        color grey8
        line-height list-item-height

        border-top 1px solid lighten(grey1, 5%)

        i.fa
          float right
          line-height inherit
          padding-right 12px

          color grey5

          text-shadow 0px 0px 2px rgba(0, 0, 0, 0.5)

  .new-ingredient-button
    margin-top 6px

    width 100%
    background-color grey2
    text-align center

    i.fa
      line-height ingredient-height
      color grey5

.editable-recipe-page .text-page
  box-sizing border-box
  width 100%
  padding 0 24px

  textarea
    display block
    width 100%
    height 150px
    margin-top 12px
