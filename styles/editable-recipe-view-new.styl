@require 'constants'
@require 'mixins'

ingredient-height = list-item-height
list-padding = 12px

.editable-recipe-page
  background-color grey10

  .fixed-content-pane
    display flex
    justify-content center
    align-items center

.navigation-header
  height title-bar-height

  i.fa
    height title-bar-height
    line-height title-bar-height

  i.fa.fa-times
    width title-bar-height
    text-align center

  i.fa.fa-chevron-left
    padding-right 8px

  .back-button
    display inline-block
    padding 0 8px

.editable-recipe-page i.fa.fa-arrow-right
    font-size title-font-size
    float right

    height title-bar-height
    width title-bar-height

    text-align center
    line-height title-bar-height

.editable-recipe-page .name-page
  position relative
  top (- title-bar-height / 2) // Make it look centered in the whole screen.
  width 75%

  input
    width 100%
    padding 10px

    font-size title-font-size

    border 1px solid grey8

    &::-webkit-input-placeholder
      font-size title-font-size

.editable-recipe-page .ingredients-page
  box-sizing border-box
  width 100%
  padding 0 8px

  .ingredients-list .deletable
    zebra(grey8, grey7)

  .editable-ingredient2, .measured-ingredient
    background-color transparent

  .editable-ingredient2
    padding-bottom list-padding

    input
      width 100%
      padding-left list-padding

      background-color transparent

      height ingredient-height
      line-height ingredient-height

    .ingredient-list-header
      text-transform uppercase
      font-size 0.7em
      font-weight 600
      padding-left 12px
      padding-bottom 4px

    .ingredient-group-list
      margin 0 list-padding

      max-height 200px
      overflow scroll

      .list-item
        padding-left 16px

        background-color grey1
        color grey5
        text-transform uppercase
        font-size uppercase-font-size
        line-height list-item-height
        font-weight 600

        border-top 1px solid lighten(grey1, 5%)

        i.fa
          float right
          line-height inherit
          padding-right 12px
