@require 'constants'
@require 'mixins'

ingredient-height = list-item-height

.editable-recipe-page
  background-color grey10

  .fixed-content-pane
    display flex
    justify-content center
    align-items center

.navigation-header
  height title-bar-height

  i.fa
    height title-bar-height
    line-height title-bar-height

  i.fa.fa-times
    width title-bar-height
    text-align center

  i.fa.fa-chevron-left
    padding-right 8px

  .back-button
    display inline-block
    padding 0 8px

.editable-recipe-page i.fa.fa-arrow-right
    font-size title-font-size
    float right

    height title-bar-height
    width title-bar-height

    text-align center
    line-height title-bar-height

.editable-recipe-page .name-page
  position relative
  top (- title-bar-height / 2) // Make it look centered in the whole screen.
  width 75%

  input
    width 100%
    padding 10px

    font-size title-font-size

    border 1px solid grey8

    &::-webkit-input-placeholder
      font-size title-font-size

.editable-recipe-page .ingredients-page
  box-sizing border-box
  width 100%
  padding 0 8px

  .editable-ingredient2
    zebra(grey8, grey7)

    input
      width 100%
      padding-left 12px

      background-color transparent

      height ingredient-height
      line-height ingredient-height
