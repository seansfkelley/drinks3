@require 'constants'
@require 'mixins'

ingredient-height = list-item-height
list-padding = 12px
input-border = 1px solid grey8

full-width-with-padding(horizontal-padding)
  box-sizing border-box
  width 100%
  padding 0 horizontal-padding

.editable-recipe-page
  background-color grey10

  > .fixed-content-pane
    display flex
    justify-content center

.navigation-header
  height title-bar-height

  i.fa
    height title-bar-height
    line-height title-bar-height

  i.fa.fa-times
    width title-bar-height
    text-align center

  i.fa.fa-chevron-left
    padding-right 8px

  .back-button
    display inline-block
    padding 0 8px

.editable-recipe-page .next-button
  float right
  font-size title-font-size

  transition color transition-duration-quick-ish

  &.disabled
    color grey7

  .next-text, i.fa
    text-align right
    height title-bar-height
    line-height title-bar-height

  .next-text
    text-transform uppercase
    font-size uppercase-font-size

  i.fa
    width title-bar-height

    text-align center

.editable-recipe-page .page-content .page-title
  font-size title-font-size
  padding-bottom 6px

.editable-recipe-page.name-page .fixed-content-pane
  align-items center

.editable-recipe-page.name-page .page-content
  // Adjust to center.
  top (- title-bar-height / 2)
  position relative

  width 75%

  .page-title
    border-bottom 1px solid transparent

  input
    width 100%
    padding 10px

    font-size title-font-size

    border input-border

    &::-webkit-input-placeholder
      font-size title-font-size

.editable-recipe-page.ingredients-page .page-content
  full-width-with-padding(8px)

  .ingredients-list .deletable, .editable-ingredient2
    zebra(grey8, grey7)

  .measured-ingredient
    background-color transparent

  .editable-ingredient2
    padding-bottom list-padding

    .input-line
      width 100%
      padding-left list-padding
      display flex
      box-sizing border-box

      input, .done-button
        height ingredient-height
        line-height ingredient-height
        background-color transparent

      input
        flex 1

      .done-button
        width 80px
        text-align center
        text-transform uppercase
        font-size uppercase-font-size
        font-weight 600

        transition opacity transition-duration-quick-ish
        opacity 1

        &.disabled
          opacity 0

    .ingredient-list-header
      text-transform uppercase
      font-size 0.7em
      font-weight 600
      padding-left 12px
      padding-bottom 4px

    .ingredient-group-list
      margin 0 list-padding

      max-height 200px
      overflow scroll

      .list-item
        padding-left 16px

        background-color grey2
        color grey8
        line-height list-item-height

        border-top 1px solid lighten(grey1, 5%)

        i.fa
          float right
          line-height inherit
          padding-right 12px

          color grey5

          text-shadow 0px 0px 2px rgba(0, 0, 0, 0.5)

  .new-ingredient-button
    margin-top 6px

    width 100%
    background-color grey2
    text-align center

    color grey7
    line-height ingredient-height

    span
      margin-left 6px

.editable-recipe-page.base-tag-page .page-content
  full-width-with-padding(8px)

  .list-item
    &:not(.is-selected) i.fa
      display none

    i.fa
      float right
      line-height inherit
      padding-right 12px

.editable-recipe-page.text-page .page-content
  full-width-with-padding(24px)

  textarea
    display block
    width 100%
    height 150px
    margin-top 12px
    border input-border
    padding 6px

.editable-recipe-page.preview-page .page-content
  width 100%
  position relative
