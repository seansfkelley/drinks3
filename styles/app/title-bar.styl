@require '../shared/colors';

.title-bar
  display: flex
  flex-direction: row
  line-height: 44px

  &.dark
    background-color: $header-background-color
    color: white

  .fa, img, .spacer // TODO: there must be a better way to center (w/o the spacer)
    width: 44px
    font-size: 20px

  .title
    flex-grow: 1
    font-size: 20px
    font-weight: 600
    text-align: center
    white-space: nowrap
