@require '../shared/animation'
@require '../shared/mixins'

.fade-in
  opacity: 1
  transition: opacity $transition-duration

.fade-out
  opacity: 0
  pointer-events: none

#app-root
  abs-full-screen()

#main-loading-overlay
  abs-full-screen()
  z-index: 2
  background: #fff
  display: flex
  justify-content: center
  align-items: center

  .fa
    color: #d8d8d8
    font-size: 24px

#iphone-status-bar-spacer
  &:after
    content: ' '
    height: 20px
    display: block
    background: $fade-color
    opacity: 0
    transition: opacity $transition-duration
    z-index: 1

  /body.showing-overlay &
    &:after
      opacity: 1

#landscape-error-overlay
  abs-full-screen()
  z-index: 1
  align-items: center
  justify-content: center
  font-size: 20px
  background-color: rgba(255, 255, 255, 0.7)
  display: none

  i.fa
    margin-left: 8px

@media (orientation: landscape)
  body
    // Near the edge of the screen, it pulls some of the blur color from the body background.
    background-color: #555

  #landscape-error-overlay
    display: flex
    pointer-events: auto

  #iphone-status-bar-spacer, #iphone-status-bar-app-wrapper
    background-color: black
    filter: blur(3px)
