@require '../shared/animation'
@require '../shared/mixins'

.fade-in
  opacity: 1
  transition: opacity $transition-duration

.fade-out
  opacity: 0
  pointer-events: none

#app-root
  abs-full-screen()
  pad-top-for-iphone-status-bar()

  .app-event-wrapper
    height: 100%
    display: flex
    flex-direction: column

#main-loading-overlay
  abs-full-screen()
  z-index: 2
  background: #fff
  display: flex
  justify-content: center
  align-items: center

  .fa
    color: #d8d8d8
    font-size: 24px

#landscape-error-overlay
  abs-full-screen()
  z-index: 1
  align-items: center
  justify-content: center
  font-size: 20px
  background-color: rgba(255, 255, 255, 0.7)
  display: none

  i.fa
    margin-left: 8px

@media (orientation: landscape)
  #landscape-error-overlay
    display: flex

  #app-root
    filter: blur(10px)
