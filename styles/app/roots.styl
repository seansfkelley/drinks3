@require '../shared/animation'
@require '../shared/mixins'
@require '../shared/size'

.fade-in
  opacity: 1
  transition: opacity $transition-duration

.fade-out
  opacity: 0
  pointer-events: none

#app-root
  abs-full-screen()
  pad-top-for-iphone-status-bar()

  /body[standalone] &:after
    content: ' '
    pointer-events: none
    background-color: #676767
    position: absolute
    top: 0
    height: $ios-top-bar-height
    left: 0
    right: 0

  .app-event-wrapper
    height: 100%
    display: flex
    flex-direction: column

#main-loading-overlay
  abs-full-screen()
  z-index: 2
  background: #fff
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column

  .fa
    color: #d8d8d8
    font-size: 24px

  // This goofy shit is to make sure the spinner stays centered in the screen;
  // without it, the text would push it up a bit and then I wouldn't like how it looks.
  .waiting-text-spacer
    margin-bottom: 24px

  .waiting-text
    transition: opacity $transition-duration-quick-ish
    opacity: 0
    color: #777
    margin-top: 24px

  &.show-waiting-text .waiting-text
    opacity: 1

#error-message-root
  z-index: 3
  pointer-events: none

#landscape-error-overlay
  abs-full-screen()
  z-index: 1
  align-items: center
  justify-content: center
  font-size: 20px
  background-color: rgba(255, 255, 255, 0.7)
  display: none

  i.fa
    margin-left: 8px

@media (orientation: landscape)
  #landscape-error-overlay
    display: flex

  #app-root
    filter: blur(10px)
