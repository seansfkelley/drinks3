@require '../shared/animation'
@require '../shared/mixins'

$fade-color = rgba(0, 0, 0, 0.5)
$pushover-width = 86% // Odd numbers can artifact b/c of rounding errors.

// Overlay basics.

.overlay
  z-index: 1
  opacity: 0
  pointer-events: none
  transition: opacity $transition-duration

  &.visible
    opacity: 1
    pointer-events: auto

// Fade things that are not the overlay.

.app-event-wrapper
  .overlay-background
    abs-full-screen()
    background: $fade-color
    opacity: 0
    transition: opacity $transition-duration
    pointer-events: none
    z-index: 1

    &.visible
      pointer-events: auto
      opacity: 1

#iphone-status-bar-spacer
  &:after
    content: ' '
    height: 20px
    display: block
    background: $fade-color
    opacity: 0
    transition: opacity $transition-duration
    z-index: 1

  /body.showing-overlay &
    &:after
      opacity: 1
