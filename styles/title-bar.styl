@require 'constants'

icon-width = title-bar-height

.title-bar
  height title-bar-height
  font-size title-font-size
  font-weight 600
  text-align center

  border-radius inherit

  .title
    height title-bar-height
    line-height title-bar-height
    width 100%

    &.showing-icons
      display inline-block
      width "calc(100% - %s)" % (icon-width * 2)

  i.fa, .spacer, img
    display inline-block
    height title-bar-height
    line-height title-bar-height
    padding 0 12px 0
    box-sizing border-box
    width icon-width
    vertical-align middle

  img
    // Not sure where this extra pixel comes from.
    position relative
    top -1px
