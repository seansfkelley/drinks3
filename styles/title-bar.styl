@require 'constants'

icon-width = title-bar-height

.title-bar
  height title-bar-height
  font-size title-font-size
  font-weight 600
  text-align center

  border-radius inherit

  .title
    height title-bar-height
    line-height title-bar-height

  i.fa
    &.float-left, &.float-right
      height title-bar-height
      line-height title-bar-height
      padding 0 12px 0
      box-sizing border-box
      width icon-width
