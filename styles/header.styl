@require 'sizes'

transition-duration = 0.33s

.header
  font-size header-footer-font-size
  font-weight 500
  text-align center

  i.fa, .header-title
    height header-footer-size
    line-height header-footer-size

  i.fa
    padding 0 12px 0
    box-sizing border-box
    width header-footer-size // Make em square.

.header.with-search
  position relative

  .search-bar-wrapper
    position absolute

    top 6px
    right 36px
    bottom 6px

    overflow hidden

    &.hidden
      width 0
      opacity 0
      transition opacity 0s ease transition-duration, width transition-duration

    &.visible
      width calc(100% - 42px) // 6px + 36px
      opacity 1
      transition opacity 0s, width transition-duration
